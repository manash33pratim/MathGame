<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mathgamelogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MathGame"
        tools:targetApi="31">
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Design.NoActionBar">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScoreboardResult"
            android:exported="false"

            android:parentActivityName=".Scoreboard" />
        <activity
            android:name=".Scoreboard"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UserName"
            android:exported="false"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".MultiTable"
            android:exported="false"
            android:label="Multiplication Table"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Divide"
            android:exported="false"
            android:label="Divide"
            android:theme="@style/Theme.GamePage" />
        <activity
            android:name=".ResultActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.GamePage" />
        <activity
            android:name=".Multi"
            android:exported="false"
            android:label="Multiplication"
            android:theme="@style/Theme.GamePage" />
        <activity
            android:name=".Minus"
            android:exported="false"
            android:label="Subtraction"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.GamePage" />
        <activity
            android:name=".Add"
            android:exported="false"
            android:label="Addition"
            android:theme="@style/Theme.GamePage" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Design.NoActionBar">

        </activity>
    </application>

</manifest>