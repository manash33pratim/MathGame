<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg1"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/table"
        android:layout_width="91dp"
        android:hapticFeedbackEnabled="true"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/multiplicationtable" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="257dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">



            <ImageButton
                android:id="@+id/buttonAdd"
                android:layout_width="97dp"
                android:layout_height="89dp"
                android:layout_gravity="end"
                android:layout_margin="30dp"
                android:background="@drawable/plus"
                android:hapticFeedbackEnabled="true"
                android:transitionName="add"



                />


            <ImageButton
                android:id="@+id/buttonMulti"
                android:layout_width="90dp"

                android:layout_height="86dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:transitionName="multi"
                android:layout_marginRight="30dp"
                android:background="@drawable/cross"
                android:text="Multiplication"

                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/buttonSub"
                android:layout_width="96dp"
                android:layout_height="92dp"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:transitionName="sub"
                android:background="@drawable/minus"


                />

            <ImageButton
                android:id="@+id/buttondiv"
                android:layout_width="142dp"
                android:layout_height="159dp"
                android:transitionName="div"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:background="@drawable/division" />

        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/scoreboard"
        android:layout_width="112dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"

        android:background="@drawable/scoreboard"
        android:foregroundGravity="bottom" />

</LinearLayout>